snippet @ps=
	@param {string=} ${1:argName} ${2:Description...}.
snippet @pf=
	@param {function()=} ${1:argName} ${2:Description...}.

# Return Docs
snippet @ra
	@return {Array} ${1:argName} ${2:Description...}.
snippet @ro
	@return {Object} ${1:argName} ${2:Description...}.
snippet @rb
	@return {boolean} ${1:argName} ${2:Description...}.
snippet @rn
	@return {number} ${1:argName} ${2:Description...}.
snippet @rs
	@return {string} ${1:argName} ${2:Description...}.
snippet @rf
	@return {function()} ${1:argName} ${2:Description...}.

# Optional Return Docs
snippet @ra=
	@return {Array=} ${1:argName} ${2:Description...}.
snippet @ro=
	@return {Object=} ${1:argName} ${2:Description...}.
snippet @rb=
	@return {boolean=} ${1:argName} ${2:Description...}.
snippet @rn=
	@return {number=} ${1:argName} ${2:Description...}.
snippet @rs=
	@return {string=} ${1:argName} ${2:Description...}.
